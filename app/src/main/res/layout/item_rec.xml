<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView

        app:cardPreventCornerOverlap="false"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        android:background="#f5f5f5"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgv_background"
                android:layout_width="185dp"
                android:layout_height="185dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="#f5f5f5"
                app:srcCompat="@drawable/blueline___recbadgefragment_winnerrecord" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tv_rec_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/nanumsquarer"
                    android:lineSpacingExtra="8sp"
                    android:textColor="@color/brownish_grey"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="2020.06.17" />

                <TextView
                    android:id="@+id/tv_rec_disttitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/notosans_blackitalic"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="10sp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_rec_date"
                    app:layout_constraintTop_toBottomOf="@+id/tv_rec_date"
                    tools:text="4.43" />

                <TextView
                    android:id="@+id/tv_rec_distdata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquarer"
                    android:lineSpacingExtra="8sp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_rec_disttitle"
                    app:layout_constraintTop_toBottomOf="@+id/tv_rec_disttitle"
                    android:text="킬로미터" />

                <TextView
                    android:id="@+id/tv_rec_timetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/notosans_blackitalic"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="2sp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_rec_disttitle"
                    app:layout_constraintTop_toBottomOf="@+id/tv_rec_distdata"
                    tools:text="30:00" />

                <TextView
                    android:id="@+id/tv_rec_timedata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquarer"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="8sp"
                    android:text="러닝시간"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_rec_timetitle"
                    app:layout_constraintTop_toBottomOf="@+id/tv_rec_timetitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>





        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
